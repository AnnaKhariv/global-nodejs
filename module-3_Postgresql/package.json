{
  "name": "module-3_postgresql",
  "version": "1.0.0",
  "description": "",
  "main": "./build/index.js",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint-fix": "eslint '*/**/*.{js,ts}' --fix",
    "build": "tsc -p tsconfig.json",
    "build-babel": "babel src -d dist --copy-files --verbose",
    "watch": "babel src -d dist --copy-files -w",
    "start:babel": "nodemon --exec babel-node -- src/index.js",
    "start": "node -r dotenv/config ./build/index.js",
    "dev": "nodemon -r dotenv/config ./src/index.ts",
    "init-db": "npx sequelize-cli db:migrate --migrations-path=build/db/migrations",
    "load-data": "npx sequelize-cli db:seed:all --seeders-path=build/db/seeders"
  },
  "author": "Anna Khariv",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@types/bluebird": "^3.5.30",
    "@types/express": "^4.17.3",
    "@types/hapi__joi": "^16.0.4",
    "@types/node": "^12.12.21",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "nodemon": "^2.0.2",
    "ts-node": "^8.5.4"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/"
    ],
    "watch": "src/**/*"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "ignore": [
      "node_modules/"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.5",
    "sequelize-cli": "^5.5.1",
    "sequelize-cli-typescript": "^3.2.0-c",
    "sequelize-typescript": "^1.1.0",
    "typescript": "^3.7.4",
    "uuidv4": "^6.0.0"
  }
}
